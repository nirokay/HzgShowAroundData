        "required": ["title"],
        "oneOf": [
            {
                "properties": {
                    "remote": {
                        "type": "string"
                    }
                },
                "required": ["remote"]
            },
            {
                "properties": {
                    "body": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                },
                "required": ["body"]
            }
        ]
    }
}
